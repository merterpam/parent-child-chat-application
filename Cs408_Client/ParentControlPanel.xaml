<Window x:Class="Client.ParentControlPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Parent Screen" Height="233" Width="488" Loaded="Window_Loaded">
    <Grid>
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="12,12,0,0" Name="textBlock1" Text="Child you want to connect:" VerticalAlignment="Top" />
        <Button Content="Connect" Height="23" HorizontalAlignment="Left" Margin="310,12,0,0" Name="btnConnect" VerticalAlignment="Top" Width="75" Click="btnConnect_Click" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="171,12,0,0" Name="txtChild" VerticalAlignment="Top" Width="120" />
        <TextBox Height="94" Margin="12,85,25,0" Name="txtMessage" VerticalAlignment="Top" TextWrapping="Wrap" IsReadOnly="True" VerticalScrollBarVisibility="Auto" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="12,56,0,0" Name="textBlock2" Text="Socket Activities:" VerticalAlignment="Top" />
    </Grid>
</Window>
